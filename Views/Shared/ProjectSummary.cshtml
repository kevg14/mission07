@{
}

@model Book


<div class="card">

    <div class="bg-light p-1">
        <h4>@Model.Title</h4>

        <span class="badge bg-info" style="float:right">
            Classification: @Model.Classification
        </span>

    </div>

    <ul>
        <li>Book Author: @Model.Author</li>
        <li>Publisher: @Model.Publisher</li>
        <li>ISBN: @Model.Isbn</li>
        <li>Category: @Model.Category</li>
        <li>Page Count: @Model.PageCount</li>
        <li>Price: @Model.Price</li>
    </ul>

    <form method="post" asp-page="/AddBook">

        @*possibly take out as not needed from videos*@
        <input type="hidden" asp-for="@Model.BookId" />

        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Add Book</button>
        </span>
    </form>

</div>

